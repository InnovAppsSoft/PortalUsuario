<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/background"
    tools:context=".view.activities.MainActivity"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/activar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardBackgroundColor="@color/background_color_50"
            app:cardCornerRadius="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/compra"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/app_name"
                    android:padding="6dp"
                    android:src="@drawable/actions_viewmembers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/botoncolorStart" />

                <TextView
                    android:id="@+id/Title1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="80dp"
                    android:fontFamily="@font/displaybold"
                    android:text="@string/activar_plan"
                    android:textColor="@color/colorDes"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/compra"
                    app:layout_constraintTop_toTopOf="@+id/compra" />

                <TextView
                    android:id="@+id/TextDescri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/displaybold"
                    android:maxLines="2"
                    android:text="@string/_25_cup"
                    android:textColor="@color/colorDes"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/Title1"
                    app:layout_constraintStart_toStartOf="@+id/Title1"
                    app:layout_constraintTop_toBottomOf="@+id/Title1" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/adicionar"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardBackgroundColor="@color/background_color_50"
            app:cardCornerRadius="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/compra3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    app:tint="@color/botoncolorStart"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/app_name"
                    android:padding="6dp"
                    android:src="@drawable/actions_viewmembers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/Title4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="80dp"
                    android:fontFamily="@font/displaybold"
                    android:text="@string/adicionar_o_eliminar"
                    android:textColor="@color/colorDes"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/compra3"
                    app:layout_constraintTop_toTopOf="@+id/compra3" />

                <TextView
                    android:id="@+id/TextDescri3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/displaybold"
                    android:maxLines="2"
                    android:text="@string/amigos"
                    android:textColor="@color/colorDes"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/Title4"
                    app:layout_constraintStart_toStartOf="@+id/Title4"
                    app:layout_constraintTop_toBottomOf="@+id/Title4" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/consultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            app:cardBackgroundColor="@color/background_color_50"
            app:cardCornerRadius="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_10sdp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/compra2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/app_name"
                    android:padding="6dp"
                    app:tint="@color/botoncolorStart"
                    android:src="@drawable/actions_viewmembers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Title3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="80dp"
                    android:fontFamily="@font/displaybold"
                    android:text="@string/consultar_plan"
                    android:textColor="@color/colorDes"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/compra2"
                    app:layout_constraintTop_toTopOf="@+id/compra2" />

                <TextView
                    android:id="@+id/TextDescri2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/displaybold"
                    android:maxLines="2"
                    android:text="@string/consultar"
                    android:textColor="@color/colorDes"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/Title3"
                    app:layout_constraintStart_toStartOf="@+id/Title3"
                    app:layout_constraintTop_toBottomOf="@+id/Title3" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.cardview.widget.CardView>