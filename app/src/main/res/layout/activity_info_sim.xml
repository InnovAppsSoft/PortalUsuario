<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ServiciosFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:text="Información SIM"
                android:textColor="@color/colorDes"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:fontFamily="@font/displaybold"
                app:layout_constraintTop_toTopOf="parent"/>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/infocubacel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neumorph_shapeAppearance="@style/NeumorphismCard"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:neumorph_shapeType="flat"
                app:layout_constraintTop_toBottomOf="@id/TextTitle"
                app:neumorph_backgroundColor="@color/background"
                app:neumorph_shadowElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_14sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/paquet"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/cubacel"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:fontFamily="@font/displaybold"
                                android:textColor="@color/colorTest7"/>

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/displaybold"
                                android:text="@string/tecnolog_a"
                                android:textColor="@color/colorTest7"
                                android:textSize="@dimen/_13sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/displaybold"
                                android:text="@string/banda"
                                android:textColor="@color/colorTest7"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/circulo" />

                            <TextView
                                android:id="@+id/tvTipoRedM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/displaybold"
                                android:text="--"
                                android:textColor="@color/colorDes"
                                android:textSize="@dimen/_10sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/circulo" />

                            <TextView
                                android:id="@+id/tvSignal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/displaybold"
                                android:text="--"
                                android:textColor="@color/colorDes"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:textColor="@color/colorTest7"
                        android:text="@string/calidad_de_se_al"
                        android:textSize="@dimen/_13sdp" />

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:neumorph_backgroundColor="@color/background"
                        app:neumorph_shadowElevation="@dimen/_5sdp"
                        app:neumorph_shapeAppearance="@style/NeumorphismCard">

                        <mobi.gspd.segmentedbarview.SegmentedBarView
                            android:id="@+id/bar_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            app:sbv_empty_segment_text="No segments"
                            app:sbv_segment_gap_width="@dimen/_1sdp"
                            app:sbv_segment_text_size="@dimen/_10sdp"
                            app:sbv_side_style="rounded"
                            app:sbv_show_description_text="true"
                            app:sbv_description_text_size="@dimen/_10sdp"
                            app:sbv_side_text_style="oneSided"
                            app:sbv_value_sign_background="#ffd50000"
                            app:sbv_value_sign_height="@dimen/_20sdp"
                            app:sbv_value_sign_width="@dimen/_50sdp" />

                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                app:layout_constraintTop_toBottomOf="@+id/infocubacel"
                android:layout_width="match_parent"
                android:id="@+id/infoq"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGSMInfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/primary"
                        android:fontFamily="@font/displaybold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="Info. Util"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvGSMInfo"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/displaybold"
                        android:text="*Para consultar si posee SIM o USIM mande un sms de libre costo al 2266 con el texto SIM"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/displaybold"
                        android:text="*Para consultar si móvil puede operar en las 3G y 4G mande un sms libre de costo al 2266 con loa 8 primeros digitos de su IMEI"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t2"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Para consultar su IMEI puede marcar *#06#"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t3"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="*Para activar la 4G en su móvil tiene que poseer una línea USIM y un móvil compatible con la frecuencia que opera ETECSA, envie un sms libre costo al 2266 con el texto LTE"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                app:layout_constraintTop_toBottomOf="@+id/infoq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGSMInfo1"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:background="@color/primary"
                        android:fontFamily="@font/displaybold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="@string/configurar_apn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="RtlSymmetry,TextContrastCheck" />

                    <TextView
                        android:id="@+id/l1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvGSMInfo1"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/displaybold"
                        android:text="*Abrir los ajustes del teléfono"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l1"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Conexiones y Redes"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l2"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Redes Móviles"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l3"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Nombre de puntos de accesos"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l4"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Añadir un nuevo APN"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l5"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Nombre: Nauta APN: Nauta"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l6"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Guardar APN"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l7"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:text="*Seleccionar APN creado"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/l9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/l8"
                        android:fontFamily="@font/displaybold"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="*Activar los datos móviles"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>
            </soup.neumorphism.NeumorphCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


