<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/coordinator">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_height="320dp"
                android:layout_width="match_parent"
            android:background="@color/background"
                app:expandedTitleTextColor="@android:color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                android:id="@+id/profile_collapsinf_tollbar_layout">

            <com.google.android.material.appbar.MaterialToolbar
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    app:navigationIconTint="@color/colorDes"
                    android:id="@+id/toolbar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:src="@drawable/portal"
                app:layout_anchorGravity="center"
                app:layout_anchor="@+id/appbar" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/nested_scroll_view">

        <RelativeLayout
                android:padding="10dp"
                android:background="@drawable/background_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp">


                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_perfil_nombre"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        android:maxLength="20"
                    app:hintTextColor="@color/colorDes"
                        app:boxCornerRadiusBottomStart="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:startIconDrawable="@drawable/outline_person_27"
                        app:errorEnabled="true"
                        android:layout_gravity="center_horizontal"
                        android:hint="Nombre">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_name_edit_text"
                            android:maxLength="20"
                        android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_perfil_numero"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:boxCornerRadiusBottomStart="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:startIconDrawable="@drawable/outline_local_phone_24"
                        app:errorEnabled="true"
                        android:layout_gravity="center_horizontal"
                        android:hint="NÃºmero">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phone_number_edit_text"
                            android:inputType="phone"
                            android:maxLength="8"
                        android:textSize="13sp"
                        app:hintTextColor="@color/colorDes"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_perfil_nauta"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxCornerRadiusBottomEnd="30dp"
                        app:boxCornerRadiusTopStart="30dp"
                        app:boxCornerRadiusTopEnd="30dp"
                        app:startIconDrawable="@drawable/outline_mark_email_unread_24"
                        app:boxCornerRadiusBottomStart="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:errorEnabled="true"
                    app:hintTextColor="@color/colorDes"
                        android:layout_gravity="center_horizontal"
                        android:hint="Correo nauta">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nauta_mail_edit_text"
                            android:layout_height="wrap_content"
                        android:textSize="13sp"
                            android:layout_width="match_parent" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                        android:id="@+id/profile_save_button"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:background="@drawable/my_gradient_drawable3"
                        android:text="Guardar"
                    android:textSize="13sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/profile_add_button"
            app:layout_anchor="@+id/appbar"
            app:layout_anchorGravity="bottom|end"
            android:contentDescription="@string/app_name"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/outline_add_photo_alternate_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/profile_delete_button"
            app:layout_anchor="@+id/appbar"
            app:layout_anchorGravity="bottom|end"
            android:contentDescription="@string/app_name"
        android:layout_marginEnd="80dp"
            app:srcCompat="@drawable/outline_delete_forever_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>