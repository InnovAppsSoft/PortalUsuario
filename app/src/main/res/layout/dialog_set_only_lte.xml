<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/infocubacel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activities.MainActivity"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/background"
    app:neumorph_shadowElevation="@dimen/_5sdp">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/background_color_50"
                app:cardCornerRadius="@dimen/_16sdp"
                android:layout_width="match_parent"
                app:neumorph_backgroundColor="@color/background"
                android:layout_height="wrap_content"
                app:neumorph_shapeType="flat"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLTE"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:fontFamily="@font/displaybold"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="Configurar modo Solo LTE"
                        android:textColor="@color/colorDes"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry,TextContrastCheck" />

                    <TextView
                        android:id="@+id/t10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLTE"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/dosislight"
                        android:text="@string/se_al1"
                        android:textColor="@color/colorDes"
                        android:textSize="13sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
        <Button
                android:id="@+id/set_4g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_gradient_drawable_"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/dosisbold"
                android:text="@string/configurar_solo_4g" />

</LinearLayout>
</androidx.cardview.widget.CardView>