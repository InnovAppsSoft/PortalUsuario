<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.activities.PermissionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/dosisbold"
            android:text="Permisos"
            android:textAlignment="textStart"
            android:textColor="@color/colorDes"
            android:textSize="@dimen/_20ssp"
            android:layout_marginBottom="10dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/background_color_50"
            app:cardCornerRadius="@dimen/_16sdp"
            >
            <moe.feng.common.stepperview.VerticalStepperView
                android:id="@+id/vertical_stepper_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:step_done_icon="@drawable/ic_done_white_16dp"
                app:step_animation_duration="@android:integer/config_mediumAnimTime"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>