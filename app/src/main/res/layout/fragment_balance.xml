<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/nested_scroll_view">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:background="@drawable/text_rounded_background"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/colorOnSurface"
                android:layout_margin="20dp"
                android:textSize="12dp"
                android:id="@+id/textHora"
                android:layout_gravity="center_horizontal"
                android:text="" />

            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardElevation="3dp"
                app:strokeWidth="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1.0">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorOnSurface"
                                android:textAppearance="?textAppearanceBodySmall"
                                android:text="Saldo PrÃ­ncipal" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textAppearance="?textAppearanceTitleMedium"
                                android:id="@+id/textSaldo"
                                android:typeface="normal"
                                android:drawablePadding="10dp"
                                android:textColor="@color/colorDes"
                                android:drawableLeft="@drawable/dinero_icon"
                                android:text="0.00 CUP" />


                        </LinearLayout>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:gravity="right"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/colorOnSurface"
                            android:textAppearance="?textAppearanceBodySmall"
                            android:layout_weight="1.0"
                            android:id="@+id/textVenceSaldo"
                            android:text="Expira: 00/00/00" />

                        <CheckBox
                            android:layout_alignParentEnd="true"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_width="24dp"
                            android:minHeight="24dp"
                            android:minWidth="24dp"
                            android:button="@drawable/sl_type_sim_24dp"
                            app:buttonTint="@color/colorCard"
                            android:id="@+id/checksimdual" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/fab"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_sync_24dp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="4dp"
                        android:orientation="horizontal">


                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardElevation="3dp"
                app:strokeWidth="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:padding="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:textAppearance="?textAppearanceBodySmall"
                                    android:text=""
                                    android:textColor="@color/colorOnSurface"
                                    android:id="@+id/textPromociones" />

                            </LinearLayout>

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textAppearance="?textAppearanceBodySmall"
                                android:padding="4dp"
                                android:drawablePadding="10dp"
                                android:id="@+id/textTarifa"
                                android:typeface="normal"
                                android:textColor="@color/colorDes"
                                android:drawableLeft="@drawable/tarifa_icon"
                                android:text="Tarifa por Consumo" />

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="4dp"
                        android:orientation="horizontal">


                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.0">


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="4dp"
                            android:drawablePadding="10dp"
                            android:textSize="13sp"
                            android:text="Datos - LTE - Nacionales"
                            android:textColor="@color/colorOnSurface" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/datos_icon"
                            android:layout_margin="4dp"
                            android:textColor="@color/colorOnSurface"
                            android:id="@+id/textPaquete"
                            android:text="0 MB" />

                        <TextView
                            android:id="@+id/textPaqueteLte"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:drawableLeft="@drawable/lte_icon"
                            android:drawablePadding="10dp"
                            android:text="0 MB"
                            android:textColor="@color/colorOnSurface"
                            android:typeface="normal" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/ic_cuentas_nacionales"
                            android:layout_margin="4dp"
                            android:textColor="@color/colorOnSurface"
                            android:id="@+id/textPaqueteNacional"
                            android:text="0 MB" />

                        <View
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/colorOutline"
                            android:layout_margin="5dp" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="4dp"
                            android:drawablePadding="10dp"
                            android:text="Voz - SMS"
                            android:textColor="@color/colorOnSurface" />


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:drawablePadding="10dp"
                            android:layout_margin="4dp"
                            android:id="@+id/textMinutos"
                            android:textColor="@color/colorOnSurface"
                            android:drawableLeft="@drawable/minutos_icon"
                            android:text="00:00:00" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:drawablePadding="10dp"
                            android:layout_margin="4dp"
                            android:id="@+id/textMensajes"
                            android:textColor="@color/colorOnSurface"
                            android:drawableLeft="@drawable/sms_icon"
                            android:text="0 SMS" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progressPaquete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:indeterminate="false"
                                android:progress="100"
                                app:indicatorSize="80dp"
                                app:trackColor="@color/colorOnSecondary"
                                app:trackCornerRadius="10dp"
                                app:trackThickness="10dp" />

                            <TextView
                                android:id="@+id/textVencePaquetes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="0 dÃ­as"
                                android:textColor="@color/colorOnSurface"
                                android:textAppearance="?textAppearanceTitleMedium" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progressMinSms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:indeterminate="false"
                                android:progress="100"
                                app:indicatorSize="80dp"
                                app:trackColor="@color/colorOnSecondary"
                                app:trackCornerRadius="10dp"
                                app:trackThickness="10dp" />

                            <TextView
                                android:id="@+id/textVenceSMS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="0 dÃ­as"
                                android:textColor="@color/colorOnSurface"
                                android:textAppearance="?textAppearanceTitleMedium" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1.0">


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="4dp"
                            android:drawablePadding="10dp"
                            android:text="Bolsa MensajerÃ­a"
                            android:textColor="@color/colorDes"
                            android:typeface="normal" />


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/textMensajeria"
                            android:padding="4dp"
                            android:drawablePadding="10dp"
                            android:textColor="@color/colorOnSurface"
                            android:drawableLeft="@drawable/bolsas_icon"
                            android:text="0 MB" />

                        <View
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/colorOutline"
                            android:layout_margin="5dp" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="4dp"
                            android:drawablePadding="10dp"
                            android:text="Bolsa Diaria"
                            android:textColor="@color/colorOnSurface" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="4dp"
                            android:drawablePadding="10dp"
                            android:textColor="@color/colorOnSurface"
                            android:id="@+id/textDiaria"
                            android:drawableLeft="@drawable/bolsas_icon"
                            android:text="0 MB" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progressMensajeria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:indeterminate="false"
                                android:progress="100"
                                app:indicatorSize="80dp"
                                app:trackColor="@color/colorOnSecondary"
                                app:trackCornerRadius="10dp"
                                app:trackThickness="10dp" />

                            <TextView
                                android:id="@+id/textVenceMensajeria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/colorOnSurface"
                                android:text="0 dÃ­as"
                                android:textAppearance="?textAppearanceTitleMedium" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progressDiaria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:indeterminate="false"
                                android:progress="100"
                                app:indicatorSize="80dp"
                                app:trackColor="@color/colorOnSecondary"
                                app:trackCornerRadius="10dp"
                                app:trackThickness="10dp" />

                            <TextView
                                android:id="@+id/textVenceDiaria"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="0 horas"
                                android:textColor="@color/colorOnSurface"
                                android:textAppearance="?textAppearanceTitleMedium" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>