<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0091EA"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_auto_image_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_gif_container"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="15dp"
            android:src="@drawable/drawable_news"
            android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" />

        <TextView
            android:id="@+id/tv_auto_image_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:fontFamily="@font/displaybold"
            android:text="@string/noticias"
            android:paddingLeft="6dp"
            android:layout_gravity="center_vertical|center_horizontal|center|start"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
</FrameLayout>