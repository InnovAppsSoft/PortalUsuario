<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".view.Fragments.connectivity.PortalNautaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        style="@style/Widget.Neumorph.ImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:src="@drawable/logo_nauta_45"
                        app:neumorph_shapeType="flat"
                        android:layout_marginTop="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/portal_nauta"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/displaybold"
                        android:textAlignment="center"/>


                    <AutoCompleteTextView
                        android:id="@+id/actv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edittextstyle"
                        android:fontFamily="@font/displaybold"
                        android:hint="@string/usuario_nauta_com_co_cu"
                        android:imeOptions="actionNext"
                        android:inputType="textWebEmailAddress"
                        android:textColor="@color/colorDes"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:imeOptions="actionNext"
                            android:background="@drawable/edittextstyle"
                            android:fontFamily="@font/displaybold"
                            android:hint="@string/contrase_a1"
                            android:inputType="textPassword"
                            android:singleLine="false"
                            android:textColor="@color/colorDes"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        app:passwordToggleEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_captchaCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edittextstyle"
                            android:fontFamily="@font/displaybold"
                            android:imeOptions="actionDone"
                            android:inputType="textImeMultiLine"
                            android:hint="@string/codigo_captcha"
                            android:singleLine="false"
                            android:textColor="@color/colorDes"
                            android:textSize="@dimen/_10sdp"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_captcha"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp" />

                        <Button
                            android:id="@+id/bt_reload"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignTop="@id/iv_captcha"
                            android:layout_alignEnd="@+id/iv_captcha"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@android:drawable/ic_popup_sync"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </RelativeLayout>

                    <soup.neumorphism.NeumorphButton
                        style="@style/Widget.Neumorph.Button"
                        android:id="@+id/bt_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/displaybold"
                        app:neumorph_shapeType="flat"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="@string/btn_acept"
                        android:textColor="@color/colorDes" />
                </LinearLayout>
            </soup.neumorphism.NeumorphCardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>