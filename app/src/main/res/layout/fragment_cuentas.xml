<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/swipeRefresh">

    <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <LinearLayout
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".nauta.ui.PortalNautaActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saldo_disponible"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/colorDes"
                    android:fontFamily="@font/dosisbold"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cuentas_saldo"
                    android:text="0.00 CUP"
                    android:textAlignment="center"
                    android:textColor="@color/colorDes"
                    android:fontFamily="@font/dosisbold"
                    android:textSize="@dimen/_20ssp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cuentas_vence_sim"
                    android:text="Expira: 00/00/00"
                    android:textAlignment="center"
                    android:textColor="@color/colorDes"
                    android:fontFamily="@font/dosislight"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp" />

            <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/background_color_50"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginBottom="30dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/text_hora_update"
                            android:text="Ultima actualizacion: 00:00"
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/dosislight"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorDes">

                    </FrameLayout>

                    <TextView
                            android:text="Voz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/text_cuentas_minutos"
                            android:text="00:00:00"
                            android:fontFamily="@font/dosislight"
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp" />

                    <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/sms"
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:id="@+id/text_cuentas_mensajes"
                            android:text="0"
                            android:fontFamily="@font/dosislight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp" />

                    <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_marginRight="10dp"
                            android:text="@string/vence_minutos_y_sms"
                            android:textStyle="bold" />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dosislight"
                            android:text="0 dias"
                            android:id="@+id/text_cuentas_vence_min_sms"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/datos"

                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_datos"
                            android:text="0 MB"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            app:fontFamily="@font/dosislight" />

                    <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="LTE"
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"
                            />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_datos_lte"
                            android:text="0 MB"
                            android:fontFamily="@font/dosislight"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp" />

                    <TextView
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/datos_nacionales1"
                            android:textStyle="bold" />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_datos_nacionales"
                            android:text="0 MB"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            app:fontFamily="@font/dosislight" />

                    <TextView
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Vence Datos"
                            android:textStyle="bold" />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_vence_datos"
                            android:text="0 dias"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            app:fontFamily="@font/dosislight" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/background_color_50"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="5dp"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                    <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bolsa Mensajeria"
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorDes">

                    </FrameLayout>

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_mensajeria"
                            android:text="0 MB"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            app:fontFamily="@font/dosislight" />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_vence_mensajeria"
                            android:text="0 dias"
                            android:layout_marginRight="10dp"
                            app:fontFamily="@font/dosislight" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/background_color_50"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="5dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bolsa Diaria"
                            android:textColor="@color/colorDes"
                            android:fontFamily="@font/displaybold"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorDes">

                    </FrameLayout>

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_diaria"
                            android:text="0 MB"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="10dp"
                            app:fontFamily="@font/dosislight" />

                    <TextView
                            android:textColor="@color/colorTextHit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_cuentas_vence_diaria"
                            android:text="0 horas"
                            android:layout_marginRight="10dp"
                            app:fontFamily="@font/dosislight" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>