<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeRefresh">

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_cuentas_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_00_cup"
                    android:fontFamily="@font/displaybold"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorDes"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/text_cuentas_vence_sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vence: 00/00/00"
                    android:fontFamily="@font/displaybold"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorDes"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/text_hora_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actualizado_00_00"
                    android:fontFamily="@font/displaybold"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorDes"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:layout_marginTop="4dp" />

                <CheckBox
                    android:id="@+id/check_sim_dual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usar SIM Dual"
                    android:layout_gravity="center"
                    android:textColor="@color/colorDes"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Promo Section (Hidden by default) -->
            <RelativeLayout
                android:id="@+id/promo_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:id="@+id/button_cuentas_bono"
                    android:fontFamily="@font/displaybold"
                    android:text="@string/promociones_activas"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textSize="13sp" />

            </RelativeLayout>

            <!-- Data Section -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:columnCount="2"
                app:orientation="horizontal"
                app:rowCount="4"
                app:useDefaultMargins="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMinutos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/minutosLabel"
                            android:text="MINUTOS"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_cuentas_minutos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:layout_marginTop="4dp"
                            android:text="00:00:00"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/minutosLabel" />

                        <TextView
                            android:id="@+id/text_cuentas_vence_minutos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/displaybold"
                            android:text="01/08/2024"
                            android:textColor="#FF0000"
                            android:textSize="15sp"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_cuentas_minutos" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDatos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/datosLabel"
                            android:text="DATOS"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_cuentas_datos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:layout_marginTop="4dp"
                            android:text="0 MB"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/datosLabel" />

                        <TextView
                            android:id="@+id/text_cuentas_vence_datos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/displaybold"
                            android:text="01/08/2024"
                            android:textColor="#FF0000"
                            android:textSize="15sp"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_cuentas_datos" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMensajes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    android:layout_marginTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/mensajesLabel"
                            android:text="SMS"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_cuentas_mensajes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:layout_marginTop="4dp"
                            android:text="0"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mensajesLabel" />

                        <TextView
                            android:id="@+id/text_cuentas_vence_mensajes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/displaybold"
                            android:text="01/08/2024"
                            android:textColor="#FF0000"
                            android:textSize="15sp"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_cuentas_mensajes" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDatosLte"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    android:layout_marginTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/lteLabel"
                            android:text="DATOS LTE"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_cuentas_datos_lte"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:layout_marginTop="4dp"
                            android:text="0 MB"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lteLabel" />

                        <TextView
                            android:id="@+id/text_cuentas_vence_datos_lte"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/displaybold"
                            android:text="01/08/2024"
                            android:textColor="#FF0000"
                            android:textSize="15sp"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_cuentas_datos_lte" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBolsaDiaria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    android:layout_marginTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/bolsaDiariaLabel"
                            android:text="BOLSA DIARIA"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_cuentas_diaria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:layout_marginTop="4dp"
                            android:text="0 MB"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/bolsaDiariaLabel" />

                        <TextView
                            android:id="@+id/text_cuentas_vence_diaria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/displaybold"
                            android:text="01/08/2024"
                            android:textColor="#FF0000"
                            android:textSize="15sp"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_cuentas_diaria" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBolsaSms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    android:layout_marginTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/bolsaSmsLabel"
                            android:text="BOLSA SMS"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_cuentas_mensajeria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:layout_marginTop="4dp"
                            android:text="0"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/bolsaSmsLabel" />

                        <TextView
                            android:id="@+id/text_cuentas_vence_mensajeria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/displaybold"
                            android:text="01/08/2024"
                            android:textColor="#FF0000"
                            android:textSize="15sp"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_cuentas_mensajeria" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDatosNacionales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_columnWeight="1"
                    android:layout_marginTop="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/datosNacionalesLabel"
                            android:text="D.NACIONALES"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_cuentas_datos_nacionales"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/displaybold"
                            android:layout_marginTop="4dp"
                            android:text="0 MB"
                            android:textColor="@color/colorDes"
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/datosNacionalesLabel" />

                        <TextView
                            android:id="@+id/text_cuentas_vence_datos_nacionales"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/displaybold"
                            android:text="01/08/2024"
                            android:textColor="#FF0000"
                            android:textSize="15sp"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/text_cuentas_datos_nacionales" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>




