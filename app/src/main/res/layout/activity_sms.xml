<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.activities.SmsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTest1"
            android:orientation="vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingBottom="1dp">

                <LinearLayout
                    android:id="@+id/topbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:padding="1dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/atras1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_ios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/displaybold"
                        android:text="@string/atr_s"
                        android:textColor="@color/colorTest2"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/plan"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/background_color_50"
                    app:cardCornerRadius="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/compra"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:tint="@color/botoncolorStart"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:contentDescription="@string/app_name"
                            android:padding="6dp"
                            android:src="@drawable/msg_markunread"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/Title1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="80dp"
                            android:fontFamily="@font/displaybold"
                            android:text="@string/plan_20_sms"
                            android:textColor="@color/colorDes"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/compra"
                            app:layout_constraintTop_toTopOf="@+id/compra" />

                        <TextView
                            android:id="@+id/TextDescri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/displaybold"
                            android:maxLines="2"
                            android:text="@string/_15_cup"
                            android:textColor="@color/colorDes"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/Title1"
                            app:layout_constraintStart_toStartOf="@+id/Title1"
                            app:layout_constraintTop_toBottomOf="@+id/Title1" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/plan20"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/background_color_50"
                    app:cardCornerRadius="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/compra3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            app:tint="@color/botoncolorStart"
                            android:contentDescription="@string/app_name"
                            android:padding="6dp"
                            android:src="@drawable/msg_markunread"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/Title4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="80dp"
                            android:fontFamily="@font/displaybold"
                            android:text="@string/plan_50_sms"
                            android:textColor="@color/colorDes"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/compra3"
                            app:layout_constraintTop_toTopOf="@+id/compra3" />

                        <TextView
                            android:id="@+id/TextDescri3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/displaybold"
                            android:maxLines="2"
                            android:text="@string/_30_cup"
                            android:textColor="@color/colorDes"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/Title4"
                            app:layout_constraintStart_toStartOf="@+id/Title4"
                            app:layout_constraintTop_toBottomOf="@+id/Title4" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/plan35"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/background_color_50"
                    app:cardCornerRadius="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/compra2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:contentDescription="@string/app_name"
                            android:padding="6dp"
                            android:src="@drawable/msg_markunread"
                            app:tint="@color/botoncolorStart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/Title3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="80dp"
                            android:fontFamily="@font/displaybold"
                            android:text="@string/plan_90_sms"
                            android:textColor="@color/colorDes"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/compra2"
                            app:layout_constraintTop_toTopOf="@+id/compra2" />

                        <TextView
                            android:id="@+id/TextDescri2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/displaybold"
                            android:maxLines="2"
                            android:text="@string/_50_cup"
                            android:textColor="@color/colorDes"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/Title3"
                            app:layout_constraintStart_toStartOf="@+id/Title3"
                            app:layout_constraintTop_toBottomOf="@+id/Title3" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/plan45"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/background_color_50"
                    app:cardCornerRadius="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/compra4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:contentDescription="@string/app_name"
                            android:padding="6dp"
                            android:src="@drawable/msg_markunread"
                            app:tint="@color/botoncolorStart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/Title5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="80dp"
                            android:fontFamily="@font/displaybold"
                            android:text="@string/plan_120_sms"
                            android:textColor="@color/colorDes"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/compra4"
                            app:layout_constraintTop_toTopOf="@+id/compra4" />

                        <TextView
                            android:id="@+id/TextDescri4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/displaybold"
                            android:maxLines="2"
                            android:text="@string/_60_cup"
                            android:textColor="@color/colorDes"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/Title5"
                            app:layout_constraintStart_toStartOf="@+id/Title5"
                            app:layout_constraintTop_toBottomOf="@+id/Title5" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>