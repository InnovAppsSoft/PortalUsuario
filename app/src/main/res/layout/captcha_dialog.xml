<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/captcha_params_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <EditText
            android:id="@+id/captcha_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/displaybold"
            android:hint="CAPTCHA"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:textColor="@color/colorDes"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/_13ssp"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/bt_reload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/outline_autorenew_24"
            tools:ignore="SpeakableTextPresentCheck"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/outline_dangerous_24"
            tools:ignore="SpeakableTextPresentCheck"

            />
        <TextView
            android:id="@+id/load_captcha_eError_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryLight"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/displaybold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
                android:textSize="13sp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/dosislight"
            android:layout_height="wrap_content"
            android:text="@string/cargando_captcha_por_favor_espere"/>
    </LinearLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_captcha"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
</LinearLayout>